<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/bis_side_padding"
    android:paddingRight="@dimen/bis_side_padding">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/plugged_icon"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/not_unplugged" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:textColor="#6fc14b"
                android:textSize="0px" />

            <TextView
                android:id="@+id/status_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:paddingTop="5dp"
                android:textColor="#fff"
                android:textSize="0px" />
        </LinearLayout>

        <View
            android:id="@+id/plugged_spacer"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:padding="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vital_stats"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/temp_icon"
                android:layout_width="0px"
                android:layout_height="0px"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/temp" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:gravity="center_vertical|left"
                android:textSize="0px" />

            <ImageView
                android:id="@+id/health_icon"
                android:layout_width="0px"
                android:layout_height="0px"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/health" />

            <TextView
                android:id="@+id/health"
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:gravity="center_vertical|left"
                android:textSize="0px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/voltage_icon"
                android:layout_width="0px"
                android:layout_height="0px"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/voltage" />

            <TextView
                android:id="@+id/voltage"
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:gravity="center_vertical|left"
                android:textSize="0px" />

            <ImageView
                android:id="@+id/current_icon"
                android:layout_width="0px"
                android:layout_height="0px"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/current" />

            <TextView
                android:id="@+id/current"
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:gravity="center_vertical|left"
                android:textSize="0px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.44"
        android:orientation="horizontal">

        <Button
            android:id="@+id/battery_use_b"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:text="@string/battery_use_b"
            android:textSize="0px"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
